                                    },
                                    "address_postal_code": {
                                        "description": "Postal code of the supplier's address",
                                        "type": "string"
                                    },
                                    "address_province": {
                                        "description": "Province of the supplier's address",
                                        "type": "string"
                                    },
                                    "address_street": {
                                        "description": "Street address of the supplier",
                                        "type": "string"

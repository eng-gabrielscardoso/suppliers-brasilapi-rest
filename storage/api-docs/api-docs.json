                "operationId": "a4657ad682bbe07aee1bb6018a080736",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "active",
                                    "company_name",
                                    "trading_name",
                                    "registration_number",
                                    "registration_type"
                                ],
                                "properties": {
                                    "active": {
                                        "description": "Indicates if the supplier is active",
